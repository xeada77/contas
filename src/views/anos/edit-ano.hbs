<div class="card col-md-7 mx-auto p-2">
    <div class="card-body">
        <h3 class="card-title text-center">Editar Año</h3>
        <form action="/anos/edit/{{ano.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <select name="ano" id="seleccionAno" class="form-control custom-select" required>
                    {{#if ano}}
                    <option value="{{ano.ano}}" selected>{{ano.ano}}</option>
                    {{else}}
                    <option selected disabled>Seleccione el año...</option>
                    {{/if}}
                    {{#each opcionesAnos}}
                    <option value="{{number}}">{{number}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                
                <div class="input-group">
                    {{#if ano}}
                    <input type="text" class="form-control" name="saldoinicial" id="inputSaldo" value="{{ano.saldoinicial}}"
                        placeholder="Saldo Inicial">

                    {{else}}
                    <input type="text" class="form-control" name="saldoinicial" id="inputSaldo" placeholder="Saldo Inicial">

                    {{/if}}
                    <div class="input-group-append">
                        <span class="input-group-text">€</span>
                        <span class="input-group-text">0.00</span>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary btn-block" id="editarAno" type="submit" data-id="{{ano.id}}">Editar</button>
        </form>
    </div>
</div>